{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% include 'navigation.html.twig' %}
    {% else %}
        <nav class="navbar navbar-expand navbar-dark bg-dark">
            <ul class="navbar-nav row justify-content-between w-100 mx-auto">
                <li class="col-4">
                    <a class="nav-item btn btn-primary w-100" href="{{ path('gymfury_homepage') }}">Home</a>
                </li>
                <li class="col-4 text-center">
                    <a class="nav-item navbar-brand w-100" href="#">GymFury</a>
                </li>
                <li class="col-4">
                    <a class="nav-item btn btn-success w-100" href="{{ path('gymfury_registration') }}">Register</a>
                </li>
            </ul>
        </nav>
    {% endif %}

    <form class="form-signin" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email Address:</label>
        <input type="email" value="{{ last_username }}" id="inputEmail" name="email" class="form-control" placeholder="Email Address" required autofocus >

        <label for="inputPassword" class="sr-only">Password:</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me">Remember Me
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
    </form>
    <hr>
{% endblock %}

{% block title %}
    Gymfury - Login
{% endblock %}

